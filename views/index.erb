<html>
  <head>
    <style>
        body {
            background: <%= bg_color %>
        }
    </style>
  </head>
  <body>
    <p>
        <%= message %>
    </p>
    <p>
      <form>
        <input type='text' name='guess' />
        <input type='submit' value='Guess!' />
      </form>
    </p>
    <p>
        <%= "You have #{@@guesses} guesses left" %>
    <p>
        <%= "The SECRET NUMBER is #{number}" if message == "You got it right!!" || cheat_mode %>
  </body>
</html>